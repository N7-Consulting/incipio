{% extends "Hr/layout.html.twig" %}

{% block title %} {{ 'rh.liste_competence'|trans({}, 'rh') }} {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #graphHolder {
            min-width: 100%;
            height: auto;
            min-height: 700px;
            position: relative;
        }
    </style>
{% endblock %}

{% block content_title %}
    {{ 'rh.liste_competence'|trans({}, 'rh') }}
{% endblock %}

{% block content_bundle %}

    <div class="row">
        <div class="col-md-3 col-xs-12">
            <a href="{{ path('hr_competence_ajouter') }}" class="btn btn-info">
                {{ 'rh.ajouter_competence'|trans({}, 'rh') }}
            </a>
            <br/><br/>
            <ul>
                {% for competence in competences %}
                    <li>
                        <a href="{{ path('hr_competence_voir', {'id': competence.id}) }}"> {{ competence.nom }} </a>
                    </li>
                {% else %}
                    <li>{{ 'rh.aucune_competence'|trans({}, 'rh') }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-9 col-xs-12">
            <div id="graphHolder" style="border: 1px solid #e6e6e6;"></div>
            <div class="well">{{ 'rh.detail'|trans({}, 'rh') }}: <span id="nodeInfos"></span></div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/d3/d3.min.js') }}"></script>
    <script src="{{ asset('js/d3/competencesNet.js') }}"></script>
    <script src="{{ path('hr_competence_visualiser') }}"></script>
    <script type="text/javascript">
        $(function () { //initialisation graph d3.min.js
            restart();
        });
    </script>
{% endblock %}
