{% extends "Treso/layout.html.twig" %}

{% block title %}
	{{ 'treso.base_urssaf_gestion'|trans({}, 'treso') }} {{ parent() }}
{% endblock %}



{% block content_bundle %}
    <h3>{{ base.baseURSSAF ? "Ajout d'une" :  "Modification de la" }} {{ 'treso.base'|trans({}, 'treso') }} : </h3>
    {{ form_start(form) }}
    <table class="table table-bordered table-striped standard">
        <tr>
            <th>{{ form_label(form.dateDebut) }}</th>
            <td>{{ form_widget(form.dateDebut) }}</td>
            <th>{{ form_label(form.dateFin) }}</th>
            <td>{{ form_widget(form.dateFin) }}</td>
        </tr>
        <tr>
            <th colspan="2">{{ form_label(form.baseURSSAF) }}</th>
            <td colspan="2">{{ form_widget(form.baseURSSAF) }}</td>
        </tr>
    </table>
            <input type="submit" class="btn btn-success" value="Enregistrer" />
    {{ form_rest(form) }}
    {{ form_end(form) }}

    {% if base.baseURSSAF %}
    <table class="table">
        <tr>
            <td style="text-align: right;"><button type="button" class="btn btn-danger" onclick="location.href='{{ path('treso_BaseURSSAF_supprimer', {'id': base.id})}}';">{{ 'treso.supprimer_base'|trans({}, 'treso') }}</button></td>
        </tr>
    </table>
    {% endif %}

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
