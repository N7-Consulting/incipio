{% extends "Treso/layout.html.twig" %}

{% block title %}
    {{ 'treso.cotisations_urssaf_gestion'|trans({}, 'treso') }} {{ parent() }}
{% endblock %}

{% block content_title %}
    {{ cotisation.libelle is null ? "Ajout d'une" :  "Modification d'une" }} {{ 'treso.charge'|trans({}, 'treso') }}
{% endblock %}

{% block content_bundle %}
    {{ form_start(form) }}
    <table class="table table-bordered table-striped standard">
        <tr>
            <th>{{ form_label(form.libelle) }}</th>
            <td>{{ form_widget(form.libelle) }}</td>
            <th>{{ form_label(form.surBaseURSSAF) }} {{ form_widget(form.surBaseURSSAF) }}</th>
            <td>{{ form_label(form.deductible) }} {{ form_widget(form.deductible) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.tauxPartJE) }}</th>
            <td>{{ form_widget(form.tauxPartJE) }}</td>
            <th>{{ form_label(form.tauxPartEtu) }}</th>
            <td>{{ form_widget(form.tauxPartEtu) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.dateDebut) }}</th>
            <td>{{ form_widget(form.dateDebut) }}</td>
            <th>{{ form_label(form.dateFin) }}</th>
            <td>{{ form_widget(form.dateFin) }}</td>
        </tr>
    </table>
    <input type="submit" class="btn btn-success" value="{{ 'treso.enregistrer'|trans({}, 'treso') }}"/>
    {{ form_rest(form) }}
    {{ form_end(form) }}


    {% if cotisation.libelle %}
        <a href="{{ path('treso_CotisationURSSAF_supprimer', {'id': cotisation.id}) }}" class="btn btn-danger">
            {{ 'treso.cotisation_urssaf_supprimer'|trans({}, 'treso') }}
        </a>
    {% endif %}

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
