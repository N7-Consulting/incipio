        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">{{ 'formation.gestion_asso'|trans({}, 'formation') }}</a></li>
            <li><a href="#tab2" data-toggle="tab">{{ 'formation.rfp'|trans({}, 'formation') }}</a></li>
