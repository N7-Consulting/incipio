            {% include "Formation/Passations/categorie.html.twig" with  {'passations':  passationDevCo } %}
        </div>
        <div class="tab-pane fade" id="tab6" style="min-height: 400px;">
            {% include "Formation/Passations/categorie.html.twig" with  {'passations':  passationQualite } %}
        </div>
        <div class="tab-pane fade" id="tab7" style="min-height: 400px;">
            {% include "Formation/Passations/categorie.html.twig" with  {'passations':  passationAutre } %}
