            <li><a href="#tab7" data-toggle="tab">{{ 'formation.autre'|trans({}, 'formation') }}</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active in" id="tab1" style="min-height: 400px;">
            {% include "Formation/Passations/categorie.html.twig" with  {'passations':  passationGestionAsso } %}
