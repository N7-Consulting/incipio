<script>
     /* ...known personne... */

    var toggle = true;
    var known = $('input#{{ known.vars.id }}');
    var knowned = $("[id^='{{ knowned.vars.id }}']").closest('tr');
    var newed = $("[id^='{{ newed.vars.id }}']").closest('tr');

    known.prop('checked', true);

    known.change(function() {

        if ($(this).is(':checked')) {
            knowned.find('input').attr('disabled', false);
            if (toggle) knowned.show();

            newed.find('input').attr('disabled', true);
            if (toggle) newed.hide();
        } else {
            newed.find('input').attr('disabled', false);
            if (toggle) newed.show();
            // Unfortunately, it's needed for correct display...
            // With {'attr': {'class': 'select2'}} in widget, it's better, but not
            // until user has first selected a CCA
            newed.find('.select2').css('width', '90%');

            knowned.find('input').attr('disabled', true);
            if (toggle) knowned.hide();
        }

    }).change();
</script>
