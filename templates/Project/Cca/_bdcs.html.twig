<table class="display dataTable table table-bordered table-striped dt-responsive" id="bdctable">
	<thead>
		<tr>
			<th>{{ 'suivi.etude_nom'|trans({}, 'project') }}</th>
			<th>{{ 'suivi.date_signature' | trans({}, 'project') }}</th>
			<th>{{ 'suivi.date_fin' | trans({}, 'project') }}</th>
			<th>{{ 'suivi.statut' | trans({}, 'project') }}</th>
		</tr>
	</thead>
	<tbody>
		{% for bdc in bdcs %}
			<tr>
				<td>
					<a href="{{ path('project_etude_voir', {'nom' : bdc.etude.nom }) }}">
						{{ bdc.etude.nom }}
					</a>
				</td>
				<td>{{ bdc.dateSignature | date('d/m/Y')}}</td>
				<td>{{ bdc.etude.getDateFin | date('d/m/Y')}}</td>
				<td>{{ bdc.etude.getStateIDToString(bdc.etude.stateID) | trans({}, 'project') }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('js/datatables/dataTables.bootstrap.min.js') }}"></script>
<script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
<script src="{{ asset('js/datatables/responsive.bootstrap.min.js') }}"></script>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('#bdctable').dataTable({
    "bPaginate": true,
    "bSort": true,
    "order": [],
    });
  });
</script>
