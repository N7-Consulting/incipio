{# layout d'accueil pour les Prospect  #}

{% extends "Personne/layout.html.twig" %}

{% block title %}
    {{ 'prospect.liste_prospect'|trans({}, 'personne') }} {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.fontAwesome.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/responsive.bootstrap.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'prospect.liste_prospect'|trans({}, 'personne') }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb no-margin pull-right">
        <li class="active">{{ 'prospect.liste_prospect'|trans({}, 'personne') }}</li>
    </ul>
{% endblock %}

{% block content_bundle %}
    {% if is_granted('ROLE_CA') %} 
        <div class="box-header with-border">
            <a href="{{ path('excel_index', {'fileName': fileName, 'classe': classe, 'fileNameType': fileNameType}) }}" class="pull-right btn btn-warning">
            {{ 'excel.import'|trans({}, 'excel')}}</a>
        </div>
    {% endif %}
    
    <table class="table table-bordered table-striped dataTable dt-responsive text-left" id="listeProspects" role="grid" width="100%">
        <thead>
        <tr>
            <th>{{ 'prospect.champs.nom'|trans({}, 'personne') }}</th>
            <th>{{ 'prospect.champs.type'|trans({}, 'personne') }}</th>
            <th>{{ 'prospect.champs.adresse'|trans({}, 'personne') }}</th>
            <th>{{ 'prospect.champs.mail'|trans({}, 'personne') }}</th>
            <th>{{ 'prospect.secteur_activite'|trans({}, 'personne') }}</th>
            <th>{{ 'prospect.champs.nombre_employe'|trans({}, 'personne') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td><a href="{{ path('personne_prospect_voir', {'id': prospect.id}) }}"> {{ prospect.nom }} </a>
                </td>
                <td>{{ prospect.entiteToString }}</td>
                <td>{{ prospect.ville }}, {{ prospect.adresse }}</td>
                <td>{{ prospect.mail }}</td>
                <td>{{ prospect.secteurToString }}</td>
                <td>{{ prospect.employes | length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('js/datatables/responsive.bootstrap.min.js') }}"></script>

    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#listeProspects').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "iDisplayLength": 50,
                "responsive": true,
                "aaSorting": [[0, 'desc']]
            });
        });
    </script>
{% endblock %}

